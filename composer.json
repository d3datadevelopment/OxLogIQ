{
  "name": "d3/oxlogiq",
  "description": "",
  "type": "oxideshop-component",
  "keywords": [
    "oxid",
    "eShop",
    "logger",
    "monolog",
    "notification",
    "d3"
  ],
  "authors": [
    {
        "name": "D3 Data Development (Inh. Thomas Dartsch)",
        "email": "info@shopmodule.com",
        "homepage": "https://www.d3data.de",
        "role": "Owner"
    }
  ],
  "homepage": "https://www.oxidmodule.com/",
  "license": [
    "MIT"
  ],
  "require": {
    "oxid-esales/oxideshop-ce": "^7",
    "d3/logger-factory": "^2"
  },
  "require-dev": {
    "d3/testingtools": "^1.2",
    "phpunit/phpunit": "^11.0",
    "friendsofphp/php-cs-fixer": "^3.75",
    "phpstan/phpstan": "^1.10"
  },
  "autoload": {
    "psr-4": {
      "D3\\OxLogiQ\\": "./"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "D3\\OxLogiQ\\Tests": "./Tests"
    }
  },
  "scripts": {
    "php-cs-fixer": "./vendor/bin/php-cs-fixer fix --config=vendor/d3/oxid-dic-handler/.php-cs-fixer.php",

    "phpstan": "./vendor/bin/phpstan --configuration=vendor/d3/oxid-dic-handler/phpstan.neon analyse",
    "phpstan-report": "./vendor/bin/phpstan --configuration=vendor/d3/ordermanager/phpstan.neon analyse --error-format=json > reports/phpstan/oxid-dic-handler/phpstan.report.json",

    "phpunit": "XDEBUG_MODE=coverage ./vendor/bin/phpunit --config=vendor/d3/oxlogiq --no-coverage",
    "phpunit-coverage": "XDEBUG_MODE=coverage ./vendor/bin/phpunit --config=vendor/d3/oxlogiq --coverage-html=reports/phpunit/oxlogiq",
    "phpunit-path-coverage": "XDEBUG_MODE=coverage ./vendor/bin/phpunit --config=vendor/d3/oxlogiq --coverage-html=reports/phpunit/oxlogiq --path-coverage"
  }
}
